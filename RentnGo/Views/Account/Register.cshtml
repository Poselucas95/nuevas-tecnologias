@model RentnGo.Models.RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-area">

        <!-- PAGE REGISTRO -->
        <section class="page-section color">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <h3 class="block-title"><span>Registro</span></h3>
                        <form action="#" class="form-sign-in">
                            <div class="row">
                                <div class="col-md-12 hello-text-wrap">
                                    <span class="hello-text text-thin">Bienvenido a Rent´N Go!</span>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Usuario" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Nombre" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", placeholder = "Apellido" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.EnumDropDownListFor(x => x.Provincia, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "Password" })
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Reingresar password", type = "Password" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                </div>
                                <div class="col-md-4">
                                    <input type="checkbox" checked />
                                    <label>Acepto los terminos y condiciones del servicio.</label>
                                </div>
                                <div class="col-md-4">
                                </div>
                                <div class="col-md-4">
                                    <input type="submit" class="btn btn-theme btn-block btn-theme-dark" value="Register" />
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-4 col-md-10">
                                    </div>
                                    <div class="col-md-4">
                                    </div>
                                    @Html.ValidationSummary("", new { @class = "col-md-4 text-danger" })
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- /PAGE REGISTRO -->

    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
