@model IEnumerable<GymSolutions.Models.Perfil>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if(Model.Count() != null){
<ul class="list-group" aria-labelledby="dropdownMenu1">
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Nombre
        <span class="badge badge-primary badge-pill"> @Html.DisplayNameFor(model => model.perfilNombre)</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Apellido
        <span class="badge badge-primary badge-pill"> @Html.DisplayNameFor(model => model.perfilApellido)</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Edad
        <span class="badge badge-primary badge-pill">@Html.DisplayNameFor(model => model.perfilEdad)</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Peso
        <span class="badge badge-primary badge-pill">@Html.DisplayNameFor(model => model.perfilPeso)</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center">
        Altura
        <span class="badge badge-primary badge-pill"> @Html.DisplayNameFor(model => model.perfilAltura)</span>
    </li>
    <li class="list-group-item d-flex justify-content-between align-items-center"><a class="dropdown-item" href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
</ul>
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
